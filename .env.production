# Production environment settings for the Frappe stack
COMPOSE_PROJECT_NAME=frape2

# MariaDB
MARIADB_ROOT_PASSWORD=replace-with-strong-root-password
MARIADB_ROOT_PASSWORD_SHA256=

# Frappe site
FRAPPE_SITE_NAME=your.domain.com
FRAPPE_DEFAULT_SITE=your.domain.com
FRAPPE_ADMIN_EMAIL=administrator@your.domain.com
FRAPPE_ADMIN_PASSWORD=replace-with-strong-admin-password
FRAPPE_ADMIN_PASSWORD_SHA256=

# Production toggles
FRAPPE_DEVELOPER_MODE=0
FRAPPE_MUTE_EMAILS=1
FRAPPE_BENCH_VERSION=version-15
YARN_NETWORK_TIMEOUT=100000

# Optional database overrides (set when you need deterministic DB credentials)
#FRAPPE_DB_NAME=your_site_db
#FRAPPE_DB_PASSWORD=replace-with-strong-db-password
#FRAPPE_DB_PASSWORD_SHA256=

# Required: set a deterministic encryption key for production (64 hex chars)
FRAPPE_ENCRYPTION_KEY=

# Reverse proxy / Caddy
CADDY_ADMIN_EMAIL=certificados@tu-dominio.com
FRAPPE_DOMAIN=erp.tu-dominio.com
PORTAINER_DOMAIN=portainer.tu-dominio.com
